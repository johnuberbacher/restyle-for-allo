{
  "manifest_version": 2,
  "name": "ReStyle for Allo",
  "version": "0.1.2",
  "description": "A Chrome Extension aimed at modifying and improving on Allo for Web's user-interface.",
  "permissions": [
    "tabs", "https://allo.google.com/web","storage"
  ],
  "icons": { 
    "16":"images/icon-32.png", 
    "48":"images/icon-64.png", 
    "128":"images/icon-128.png" 
  }, 
  "browser_action": { 
  	"default_icon": "images/icon-64.png", 
    "default_title":"ReStyle for AlloWeb",
    "default_popup": "popup.html"
  }, 
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["popup.js"],
    "matches": ["https://allo.google.com/web"]
  }]

}